<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.UsmanRasool.UsmanRasool.driverdrowsinesstracker.Options">






    <LinearLayout
        android:id="@+id/screen0"
        android:background="#4292f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:text=""

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Driver Drowsiness Tracker"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="#f5fffa"
                android:textSize="30dp"
                android:textStyle="bold"
                />
            <TextView
                android:background="#c2d3ef"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:text="Make your Journey safe!"
                android:textAlignment="center"
                android:layout_marginTop="0dp"
                android:textColor="#4292f4"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#4292f4"
            android:paddingLeft="10dp"


            >
            <Button
                android:id="@+id/userGuide"
                android:drawableTop="@drawable/ic_manual_book"
                android:background="#c2d3ef"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="   User Guide        "
                android:paddingTop="8dp"
                android:paddingBottom="3dp"
                android:textColor="#4292f4"

                android:layout_marginTop="25dp"

                android:textSize="20sp"/>

            <Button
                android:id="@+id/graphbtn"
                android:drawableTop="@drawable/ic_percentage"
                android:background="#c2d3ef"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="   Accuracy          "
                android:paddingTop="8dp"
                android:textColor="#4292f4"
                android:paddingBottom="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"



                android:textSize="20sp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/mapsbtn"
            android:drawableTop="@drawable/ic_nav"
            android:background="#c2d3ef"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="         maps             "
            android:paddingTop="8dp"
            android:paddingBottom="3dp"
            android:textColor="#4292f4"
            android:layout_marginLeft="8dp"

            android:layout_marginTop="25dp"
            android:textSize="20sp"/>



        <Button
            android:id="@+id/Ratebtn"
            android:drawableTop="@drawable/ic_survey"
            android:background="#c2d3ef"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="     Feedback          "
            android:textColor="#4292f4"
            android:layout_marginLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="3dp"

            android:layout_marginTop="25dp"

            android:textSize="20sp"/>






        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:background="#c2d3ef"
                android:drawableTop="@drawable/ic_play_button"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="                Tracking                 "
                android:paddingTop="8dp"
                android:paddingBottom="3dp"
                android:textColor="#4292f4"
                android:layout_marginLeft="50dp"
                android:textSize="20sp"
                android:id="@+id/txtBt0"
                app:layout_anchorGravity="top|center_horizontal"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/screen1"
        android:background="#4292f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:text="" >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:layout_margin="10dp"
            android:text="This app has a built in Navigation service powered by Google"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_anchor="@+id/button"
            app:layout_anchorGravity="top|center_horizontal" />

        <ImageView
            android:layout_margin="70dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/maps" />

        <TextView
            android:layout_marginTop="20dp"
            android:background="#c2d3ef"
            android:id="@+id/txtBt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="And then?"
            android:layout_marginLeft="135dp"

            android:gravity="center"
            android:padding="3dp"
            android:textColor="#4292f4"
            android:textSize="20sp"
            app:layout_anchor="@+id/button"
            app:layout_anchorGravity="top|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/screen2"
        android:background="#4292f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:text="" >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:layout_margin="10dp"
            android:text="While you drive, \nthe app detects if you feel tired"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_anchor="@+id/button"
            app:layout_anchorGravity="top|center_horizontal" />

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:srcCompat="@mipmap/ic_launcher" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1"
            android:layout_margin="10dp"
            android:text="You can search nearby Restaurants and Hotels!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_anchor="@+id/button"
            app:layout_anchorGravity="top|center_horizontal" />
        <ImageView
            android:layout_margin="10dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/maccc" />


        <Button
            android:background="#c2d3ef"
            android:layout_marginTop="30dp"
            android:id="@+id/txtBt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Tracking"

            android:layout_gravity="center"
            android:padding="4dp"
            android:textColor="#4292f4"
            android:textSize="25sp"


            />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
